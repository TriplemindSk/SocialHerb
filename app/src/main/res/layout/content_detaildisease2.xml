<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sk.s5630213008.phamaherbui1.Detaildisease2Activity"
    tools:showIn="@layout/detaildisease2">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView4"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="เภสัชกร"
                android:id="@+id/textView3"
                android:layout_gravity="right" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="โรคกระเพาะ"
                android:id="@+id/textView7"
                android:layout_gravity="left"
                android:textColor="#1c1c1c" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="โรคและอาการที่เกี่ยวข้อง"
                    android:id="@+id/textView4"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#191818" />

            </LinearLayout>



            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:id="@+id/scrollView">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  อาการโรคกระเพาะอาหาร เช็กดูหน่อย ลองสำรวจอาการกันดูว่าที่เราปวดท้องนั้นเป็นโรคกระเพาะอาหารแล้วหรือเปล่า ปวดหรือจุกแน่นท้องบริเวณใต้ลิ้นปี่ เวลาท้องว่าง หรือเวลาหิว แต่บรรเทาได้ด้วยการทานอาหารหรือยาลดกรด แต่ในบางคนจะยิ่งปวดมากขึ้นหลังทานอาหาร โดยเฉพาะทานอาหารที่รสเผ็ดจัด เปรี้ยวจัด  มักปวดแบบเป็น ๆ หาย ๆ มานานเป็นปี โดยมีช่วงเว้นที่ปลอดอาการค่อนข้างนาน เช่น ปวดอยู่ 1-2 สัปดาห์ และหายไปหลาย ๆ เดือน จึงกลับมาปวดอีก ปวดแน่นท้องกลางดึกหลังจากหลับไปแล้ว  บางคนอาจมีอาการกำเริบเวลากินยาแอสไพริน ยาแก้ปวดข้อ ดื่มแอลกอฮอล์ กาแฟ ของมันๆ ของหวานๆ อาหารที่ย่อยยาก หรือกำเริบในช่วงที่กินอาหารผิดเวลาหรือปล่อยให้หิวนานๆ หรือเวลามีความเครียด
      "
                    android:id="@+id/textView15"
                    android:textColor="#7e2525" />

            </ScrollView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:orientation="horizontal"
                android:layout_gravity="left"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="โรคที่เกี่ยวข้อง  : "
                    android:id="@+id/textView5"
                    android:textColor="#1c1c1c" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="กรดไหลย้อน"
                    android:id="@+id/button8"
                    android:onClick="bbClick"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="left">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="สมุนไพรที่เกี่ยวข้อง : "
                    android:id="@+id/textView6"
                    android:textColor="#1c1c1c" />



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="กล้วยน้ำว้า"
                    android:id="@+id/button10"
                    android:onClick="onClick"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:orientation="horizontal">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="แสดงความคิดเห็น "
                android:id="@+id/textView17" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/scrollView6"
                android:background="#ffffff" >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textMultiLine"
                    android:ems="50"
                    android:id="@+id/editText7"
                    android:layout_gravity="center_horizontal" />

            </ScrollView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ตกลง"
                    android:id="@+id/btnOK"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="ความคิดเห็นจากเภสัชกร"
                android:id="@+id/tv7"
                android:textColor="#1c1c1c" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mymind"
                    android:id="@+id/textView8"
                    android:textColor="#1c1c1c" />

            </LinearLayout>

            <TextView
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:text="ว่านหางจระเข้ ก็ช่วยได้นะ"
                android:id="@+id/textView10"
                android:layout_gravity="right" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="prim"
                    android:id="@+id/textView9"
                    android:textColor="#1c1c1c" />


            </LinearLayout>

            <TextView
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:text="หัวปลี ช่วยป้องกันการเกิดแผลในกระเพาะอาหารได้"
                android:id="@+id/textView11"
                android:layout_gravity="right"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center">
            </LinearLayout>




        </LinearLayout>

    </ScrollView>


</RelativeLayout>
